<Window x:Class="WpfApplication1.Decrypted"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decrypted" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF363636" Offset="1"/>
                <GradientStop Color="#FF7C7C7C"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBox Name="decryptedText" HorizontalAlignment="Stretch" Foreground="White" Background="Transparent" VerticalAlignment="Stretch" Margin="10,10,10,50" TextWrapping="Wrap"/>
        <Button Content="Terug naar begin" HorizontalAlignment="Right" Foreground="White" VerticalAlignment="Bottom" Width="150" Height="30" Margin="0,0,10,10" Click="Button_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFAE5B03" Offset="1"/>
                    <GradientStop Color="#FFC96800"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
